<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>
  <appSettings>
    <add key="SkipHiddenScanForXlsm" value="false" />
    <add key="XlsmHiddenScanMaxColumns" value="80" />
      <!-- 控制是否啟用 DataGridView 除錯日誌 (預設 false) -->
      <add key="EnableDgvStyleLog" value="false" />
      <add key="EnableDgvHiddenLog" value="false" />
      <!-- 若為 true，則 .xlsm 也優先使用 NPOI 快速讀取（僅讀取儲存格值，不執行巨集）；若 NPOI 失敗則回退至 Interop -->
      <add key="PreferNpoiForXlsm" value="true" />
  </appSettings>
</configuration>
